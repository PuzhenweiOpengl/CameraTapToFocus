<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextLarge" parent="TextInfo">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="TextSmall" parent="TextInfo">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="MenuImageButton" parent="ImageButton">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">@dimen/menu_button_margin_bottom</item>
    </style>

    <style name="InfoPanelText" parent="TextInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="ScanPanelView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:clickable">false</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="ScanPanelViewNoScale">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="ScanInfo" parent="TextInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="ScanSubpanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/scan_subpanel_margin_bottom</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ScanPanelButton" parent="ImageButton">
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="CardReaderButton" parent="ImageButton">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ScanImageButton" parent="ImageButton">
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="TextTitle" parent="TextInfo">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="TextSubTitle" parent="TextInfo">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextTitleBig" parent="TextInfo">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="TextSubTitleBig" parent="TextInfo">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="ScanHeader" parent="TextInfo">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">30dp</item>

        <item name="android:textColor">#39787a</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SendStaticText" parent="TextInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/section_margin</item>
        <item name="android:layout_marginLeft">@dimen/send_text_margin</item>
        <item name="android:layout_marginRight">@dimen/send_text_margin</item>
    </style>
    <style name="SendEditText" parent="TextInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/item_margin</item>
        <item name="android:layout_marginLeft">@dimen/send_text_margin</item>
        <item name="android:layout_marginRight">@dimen/send_text_margin</item>
        <item name="android:paddingLeft">@dimen/send_text_padding</item>
        <item name="android:paddingRight">@dimen/send_text_padding</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="SendEmailText" parent="SendEditText">
        <item name="android:inputType">textEmailAddress|</item>
    </style>

    <style name="MRZData" parent="TextInfo">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
